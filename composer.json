{
  "config": {
    "platform": {
      "php": "7.4"
    }
  },
  "name": "ryunosuke/functions",
  "description": "Utility functions for PHP",
  "license": "MIT",
  "authors": [
    {
      "name": "ryunosuke",
      "email": "ryunosuke.arima@gmail.com"
    }
  ],
  "autoload": {
    "psr-4": {
      "ryunosuke\\Functions\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "ryunosuke\\Test\\": "tests/Test/"
    }
  },
  "require": {
    "php": ">=7.4"
  },
  "require-dev": {
    "phpunit/phpunit": "9.*",
    "psr/simple-cache": "1.*",
    "ryunosuke/phpunit-extension": "3.*"
  },
  "bin": [
    "bin/export-function",
    "bin/exclude-internal"
  ],
  "scripts": {
    "build": [
      "@export",
      "@stub",
      "@test",
      "@document"
    ],
    "stub": [
      "php bin/stub.php"
    ],
    "export": [
      "ryunosuke\\Functions\\Transporter::exportAll"
    ],
    "test": [
      "env TEST_TARGET=package   php -d short_open_tag=0 vendor/bin/phpunit --configuration=tests/phpunit.xml",
      "env TEST_TARGET=global    php -d short_open_tag=0 vendor/bin/phpunit --configuration=tests/phpunit.xml",
      "env TEST_TARGET=namespace php -d short_open_tag=1 vendor/bin/phpunit --configuration=tests/phpunit.xml",
      "env TEST_TARGET=class     php -d short_open_tag=1 vendor/bin/phpunit --configuration=tests/phpunit.xml"
    ],
    "test-coverage": [
      "env TEST_TARGET=package   vendor/bin/phpunit --configuration=tests/phpunit.xml --coverage-html=tests/coverage"
    ],
    "document": [
      "@php bin/documentize.phar generate src/Package docs --ansi --force --contain ryunosuke\\\\Functions\\\\Package --template-config docconfig.php"
    ]
  }
}
